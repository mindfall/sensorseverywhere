.container.col-md-6.col-md-offset-3(ng-controller="wFSignupCtrl")
  h3 Become a member of {{groupName}}
  .well
    form.form-horizontal(name="groupSignUpForm")
      fieldset
        legend Sign in...
        .form-group
          label.col-md-2.control-label(for="email") Email
          .col-md-8
            input.form-control(name="email", type="email", placeholder="Email", ng-model="memberEmail", required)
         .form-group
          label.col-md-2.control-label(for="password") Password
          .col-md-8
            input.form-control(name="password", type="password", placeholder="Password", ng-model="memberPass", required)
        .form-group
          .col-md-8.col-md-offset-2
            .pull-right
              button.btn.btn-primary(ng-click="groupSignIn()", ng-disabled="signupForm.$invalid") Submit
              | &nbsp;
              a.btn.btn-default(href="/") Cancel


  .well
    form.form-horizontal(name="groupSignUpForm")
      fieldset
        legend ...or sign up!
        .form-group
          label.col-md-2.control-label(for="email") Email
          .col-md-8
            input.form-control(name="email", type="email", placeholder="Email", ng-model="email", required)
        .form-group
          label.col-md-2.control-label(for="password") Password
          .col-md-8
            input.form-control(name="password", type="password", placeholder="Password", ng-model="password", required)
        .form-group
          label.col-md-2.control-label(for="fname") First Name
          .col-md-8
            input.form-control(name="fname", type="text", placeholder="First Name", ng-model="fname", required)
        .form-group
          label.col-md-2.control-label(for="lname") Last Name
          .col-md-8
            input.form-control(name="lname", type="text", placeholder="Last Name", ng-model="lname", required)

        .form-group
          .col-md-8.col-md-offset-2
            .pull-right
              button.btn.btn-primary(ng-click="groupSignUp()", ng-disabled="signupForm.$invalid") Submit
              | &nbsp;
              a.btn.btn-default(href="/") Cancel
      