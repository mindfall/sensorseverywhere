body 
	padding-top 61px

footer
	padding-left 15px
	padding-right 15px
	p
		border-top 1px solid #d7e0e2

/* MAIN PAGE */

/* NAVBAR */

.navbar 
	background-color: #fff

.navbar-header a.navbar-brand
	margin-top -15px
	margin-bottom -20px
	h6
		color #ccc
	&:hover 
		color: black
	&:active
		color: black
	&:link
		color: black

.navbar-inverse .navbar-nav > li > a
	&:hover 
		color: black
	&:active
		color: black
	&:link
		color: black
	&:focus
		color: black

.navbar-form
	.form-group
		margin-left 10px
	button
		margin-left 10px

.main_nav_links
	margin: 0 auto
	position: relative
	width: 30%

ul.nav.navbar-nav a.navbar-nav-link
	font-size: 1.1em
	color: #999
	margin-left: 20px

.toast-top-right
	top 70px

.toast-success
	background-color #cdcdcd

/* END NAVBAR */
/* ANIMAL SELECTION AREA (.toolbar) */

.selection-layout
	p
		border-top 1px solid #d7e0e2
	height: 30px
	input
		width: 100%
		float: right
	margin-bottom: 10px

.selectedWildlife
	border: 1px solid #d7e0e2
	-moz-border-radius: 5px
	border-radius: 5px
	float: right
	width: 100%
	height: 758px
	display: block
	margin-top: 1%

.wildlifeCount
	width: 8% !important

.wildlifePopup {
	width: 300px;
	height: 400px;
	margin-left: -70%;
	margin-top: 15%;
	border-radius: 15px
	-moz-border-radius: 15px
	-webkit-border-radius: 15px
	position: absolute;
	background-color: white;
	border: 1px solid #d7e0e2;
}

/* END ANIMAL SELECTION AREA */
/* MAP */


.leaflet-control-geosearch, .leaflet-control-geosearch ul
	top: 60px !important
	margin-left: 700px !important

#map 
	border-top: 1px solid #e5e5e5
	position: absolute
	left: 0 
	margin-top: 3.5%
	width: 100%
	height: 750px

.saveProjectButton
	border: 5px solid #fff
	-moz-border-radius: 15px
	-webkit-border-radius: 15px
	border-radius: 15px
	width: 33%
	height: 75px
	background-color: #09f
	display: block
	margin: 46% 0% 0 33%
	text-align: center
	vertical-align: middle
	line-height: 65px
	z-index: 9999
	position: relative

/* END MAP */
/* END MAIN PAGE */


/* PROJECT / FUND LIST PAGE */

.projectOutline
	border: 3px solid #d3d3d3
	border-radius: 5px
	float: left;
	margin: 20px
	padding: 10px
	max-width: 186px

#center-pane
	margin-left: 15%

/* END PROJECT / FUND LIST PAGE */


