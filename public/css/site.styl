html, .row-map-container, .content, .main-container
	height: 100%

.col-9-map-container, .col-3-selection-container
	height: 75%
	margin-bottom: 1%
	position: absolute

.col-3-selection-container
	margin-left: 75%

body 
	height: 700px
	padding-top: 61px

.container
	height: 5% !important


footer
	padding-left: 15px
	padding-right: 15px
	bottom: 0
	position: fixed
	height: 20px
	background-color: white
	p
		border-top 1px solid #d7e0e2

/* MAIN PAGE */

/* NAVBAR */

.navbar 
	background-color: #fff

.navbar-header a.navbar-brand
	margin-top -15px
	margin-bottom -20px
	h6
		color #ccc
	&:hover 
		color: black
	&:active
		color: black
	&:link
		color: black

.navbar-inverse .navbar-nav > li > a
	&:hover 
		color: black
	&:active
		color: black
	&:link
		color: black
	&:focus
		color: black

.navbar-form
	.form-group
		margin-left 10px
	button
		margin-left 10px

.main_nav_links
	margin: 0 auto
	position: relative
	width: 30%

ul.nav.navbar-nav a.navbar-nav-link
	font-size: 1.1em
	color: #999
	margin-left: 20px

.toast-top-right
	top 70px

.toast-success
	background-color #cdcdcd

/* END NAVBAR */

/* GROUPS */

.group-collaboration-elements
	margin-top: 43%
	position: absolute
	border-top: 2px solid grey
	width: 100%

.chat-panel
	border: 1px solid #d7e0e2
	-moz-border-radius: 5px
	-webkit-border-radius: 5px
	border-radius: 5px
	height: 200px
	position: absolute
	margin-left: 1560px


/* ANIMAL SELECTION AREA (.toolbar) */

.selection-layout
	p
		border-top 1px solid #d7e0e2
	height: 100%
	width: 95%
	input
		width: 100%
		float: right
	margin-bottom: 30px
	position: absolute

.selectedWildlifeContainer
	border: 1px solid #d7e0e2
	-moz-border-radius: 5px
	-webkit-border-radius: 5px
	border-radius: 5px
	float: right
	width: 100%
	height: 100%
	display: block
	margin-top: 1%

.selectedWildlife
	clear: both
	display: block
	width: 100%

.wildlifeCell
	width: 25%

.wildlifeBtnCell
	width: 25%
	float: right

.wildlifeCounter, .monitorCounter
	float: left !important
	width: 40px !important


.selectedWildlifeName
	float: left

.removeSelectedWildlilfeBtn, .closePopUp
	clear: both
	margin-top: 2px
	border: 1px solid grey
	text-align: center
	border-radius: 3px
	-moz-border-radius: 3px
	-webkit-border-radius: 3px

.closePopUp
	width: 20px	
	height: 20px
	right: 10px
	position: absolute

.selectedThumb
	margin-right: 10px
	cursor: pointer

.wildlifePopup {
	width: 300px;
	height: 450px;
	margin-left: -70%;
	margin-top: 15%;
	border-radius: 15px
	-moz-border-radius: 15px
	-webkit-border-radius: 15px
	border: 1px solid #d7e0e2
	position: absolute;
	background-color: white;
	padding: 10px
}

.commentPopup {
	width: 600px;
	height: 300px;
	margin-left: -70%;
	margin-top: 15%;
	border-radius: 15px
	-moz-border-radius: 15px
	-webkit-border-radius: 15px
	border: 1px solid #d7e0e2
	position: absolute;
	background-color: white;
	padding: 10px
}

.commentPopup label
	display: inline
	margin-left: 10px

.commentTextarea
	position: absolute
	left: -18px
	top: 30px

.labelComments
	position: absolute
	top: 80%

.savedWildlifeComments
	position: absolute
	top: 16px
	width: 260px
	height: 80px
	word-wrap: normal
	overflow: hidden


.popupRow
	padding-top: 50px
	position: relative

.popupCancel, .popupComments
	width: 80px
	height: 22px
	border: 1px solid grey
	text-align: center
	border-radius: 3px
	-moz-border-radius: 3px
	-webkit-border-radius: 3px
	bottom: 10px
	left: 30px
	position: absolute

.popupComments
	width: 120px

.popupSave
	width: 40px
	height: 22px
	border: 1px solid grey
	text-align: center
	border-radius: 3px
	-moz-border-radius: 3px
	-webkit-border-radius: 3px
	bottom: 10px
	right: 30px
	position: absolute

.projectFormPopup {
	width: 600px
	height: 900px
	margin-top: 50px
	margin-left: 25%
	border-radius: 15px
	-moz-border-radius: 15px
	-webkit-border-radius: 15px
	border: 1px solid #d7e0e2
	position: absolute
	background-color: white
	padding: 10px
	z-index: 100
}



/* END ANIMAL SELECTION AREA */
/* MAP */
.leaflet-control-geosearch, .leaflet-control-geosearch ul
	margin-left: 50px !important
	width: 400px !important
	position: absolute
	z-index: 100 !important

#map 
	border-top: 1px solid #e5e5e5
	position: absolute
	left: 0 
	margin-top: 3.5%
	width: 100%
	height: 100%
	display: block

.saveProjectButton
	background-image: url('../../img/buttons/btn_save_corridor.png')
	background-repeat: no-repeat
	display: block
	width: 215px
	height: 45px
	margin-top: 40%
	left: 35%
	z-index: 99
	position: absolute

.saveProjectButtonText{
	text-align: center
	vertical-align: middle
	line-height: 65px
}

/* END MAP */
/* END MAIN PAGE */


/* PROJECT / FUND LIST PAGE */

.projectOutline
	border: 3px solid #d3d3d3
	border-radius: 5px
	float: left;
	margin: 40px
	padding: 10px
	max-width: 200px
	max-height: 250px
	position: relative

#center-pane
	margin-left: 15%

/* END PROJECT / FUND LIST PAGE */



