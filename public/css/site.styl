html
	height 100%
	width 100%

body
	padding 0
	border-left 3px solid $raised-dark-grey
	border-right 3px solid $raised-dark-grey
	width 100%
	height 100
	z-index 10

section.content
	background-color #fff
	height 95%
	width 100%

footer
	bottom 0
	position fixed
	height 20px
	background-color $raised-dark-grey
	color $font
	width 101%
	margin-left -1%
	-webkit-box-shadow 1px 1px 20px 5px rgba(0, 123,0,0.3)
	-moz-box-shadow 1px 1px 20px 5px rgba(0, 123, 0,0.3)
	box-shadow 1px 1px 20px 5px rgba(0, 123, 0,0.3)

	// border-left 3px solid $raised-dark-grey
	// border-right 3px solid $raised-dark-grey

// html, .row-map-container, .content, .main-container
.main-container
	height 100% !important
 	
.info-row
	width 100%
	height 400px
	.info-box
		width 33%
		float left
	.partner-panel
		width 25%
		float left
		
.home-hero
	position absolute
	width 100% !important
	height 100%
	margin-left -3px
	img
		height auto
		margin-top -20px
		width 100%
	.home-btn
		width 300px
		height 100px
		margin 20% 50% 0 50%
		left -150px
		display block
		position absolute
		font-size 30pt
		color #fff
		text-align center
	.btn-custom
		background-color hsl(113, 38%, 41%) !important
		background-repeat repeat-x
		//filter progid:DXImageTransform.Microsoft.gradient(startColorstr="#5db152", endColorstr="#4a9040")
		background-image -khtml-gradient(linear, left top, left bottom, from(#5db152), to(#4a9040))
		background-image -moz-linear-gradient(top, #5db152, #4a9040)
		background-image -ms-linear-gradient(top, #5db152, #4a9040)
		background-image -webkit-gradient(linear, left top, left bottom, color-stop(0%, #5db152), color-stop(100%, #4a9040))
		background-image -webkit-linear-gradient(top, #5db152, #4a9040)
		background-image -o-linear-gradient(top, #5db152, #4a9040)
		background-image linear-gradient(#5db152, #4a9040)
		border-color #4a9040 #4a9040 hsl(113, 38%, 38.5%)
		color #fff !important
		text-shadow 0 -1px 0 rgba(0, 0, 0, 0.16)
		-webkit-font-smoothing antialiased


	.home-text
		display block
		font-size 47pt
		height 100px
		left -40%
		margin 5% 50% 0
		position absolute
		width 100%


.document-overlay
	display block
	position relative
	background-color white
	width 800px
	height 700px
	top 150px
	margin-left 50%
	left -400px

.document-overlay-close-btn
	width 20px
	height 20px
	float right
	margin-top 10px
	margin-right 10px
	border 1px solid grey



.col-3-selection-container
	margin-left 75%

