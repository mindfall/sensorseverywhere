.splash
	width 100%
	height 100%
	position absolute
	z-index 1090
	background-color white
	opacity .7
	margin-top -10%

.splash-content
	clear both
	width 30%
	height 500px
	margin-left 35%
	top 10%
	border-radius 15px
	-moz-border-radius 15px
	-webkit-border-radius 15px
	-webkit-box-shadow 15px 15px 15px 10px rgba(155,157,157,.5)
	-moz-box-shadow 15px 15px 15px 10px rgba(155,157,157,.5)
	box-shadow 15px 15px 15px 10px rgba(155,157,157,.5)
	border 5px solid #d7e0e2
	background-color white
	position absolute
	padding 10px
	z-index 1100


