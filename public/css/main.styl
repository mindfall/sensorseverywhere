/* ANIMAL SELECTION AREA (.toolbar) */

.selection-layout
	height 100%
	width 95%
	margin-top 5%
	input
		width 100%
		float right
	margin-bottom 30px
	position absolute

.textwrap
	float left
	margin 10px

.wildlife-description
	clear both

.selected-wildlife-container
	border 3px solid #d7e0e2
	-moz-border-radius 5px
	-webkit-border-radius 5px
	border-radius 5px
	float right
	width 100%
	height 91%
	display block
	margin-top 4%
	overflow-x hidden

.selectedWildlife
	clear both
	display block
	width 100%

.wildlifeCell
	width 25%

.wildlifeBtnCell
	width 25%
	float right

.monitor-info
	float left
	margin-top 40px


.wildlifeCounter, .monitor-counter
	float left !important
	width 40px !important

.monitor-check
	margin-left 10px !important
	margin-top 9px
	position absolute

.monitor-label
	float left

.selectedWildlifeName
	float left

.popup-row
	margin-left 10px
	position absolute
	margin-top 150px

.video-label
	margin-left 20px

.remove-selected-wildlilfe-btn, .remove-selected-monitor-btn, .closePopUp
	clear both
	margin-top 2px
	border 1px solid grey
	text-align center
	border-radius 3px
	-moz-border-radius 3px
	-webkit-border-radius 3px

.remove-selected-monitor-btn
	width 15px
	float right

.closePopUp
	width 20px	
	height 20px
	right 10px
	position absolute
	z-index 1

.selectedThumb
	margin-right 10px
	cursor pointer

.wildlife-popup 
	clear both
	width 300%
	height 700px
	margin-left -304%
	top 5px
	border-radius 15px
	-moz-border-radius 15px
	-webkit-border-radius 15px
	-webkit-box-shadow 15px 15px 15px 10px rgba(155,157,157,.5)
	-moz-box-shadow 15px 15px 15px 10px rgba(155,157,157,.5)
	box-shadow 15px 15px 15px 10px rgba(155,157,157,.5)
	border 5px solid #d7e0e2
	background-color white
	position absolute
	padding 10px
	z-index 1000


.wildlife-popup-row
	float left

.project-popup 
	width 71%
	height 700px
	margin-left 3.7%
	margin-top 1%
	z-index 1002

.project-popup-date-input
	width 40%
	display inline
	float left
	margin-right 20px

.what-we-have
	width 50%
	float left

.further-info
	width 50%
	float right


.project-popup, .comment-popup
	border-radius 15px
	-moz-border-radius 15px
	-webkit-border-radius 15px
	-webkit-box-shadow 15px 15px 15px 10px rgba(155,157,157,.5)
	-moz-box-shadow 15px 15px 15px 10px rgba(155,157,157,.5)
	box-shadow 15px 15px 15px 10px rgba(155,157,157,.5)
	border 5px solid #d7e0e2
	position absolute
	background-color white
	padding 10px

.comment-popup 
	width 600px
	height 300px
	margin-left -70%
	margin-top -200%
	z-index 1001

.comment-popup label
	display inline
	margin-left 10px

.comment-textarea
	position absolute
	top 30px

.label-comments
	clear both
	float left
	margin-top 20px

.saved-wildlife-comments
	clear both
	top 16px
	width 260px
	height 80p
	word-wrap normal
	overflow hidden
	text-overflow ellipsis

.popupCancel, .popupComments
	width 80px
	height 22px
	border 1px solid grey
	text-align center
	border-radius 3px
	-moz-border-radius 3px
	-webkit-border-radius 3px
	bottom 10px
	left 30px
	position absolute

.popupComments
	width 120px

.popupSave
	width 40px
	height 22px
	border 1px solid grey
	text-align center
	border-radius 3px
	-moz-border-radius 3px
	-webkit-border-radius 3px
	bottom 10px
	right 30px
	position absolute

